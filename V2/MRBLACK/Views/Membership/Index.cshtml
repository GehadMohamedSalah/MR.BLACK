@model MRBLACK.Helper.PagedList<MRBLACK.Models.Database.Membership>
@using MRBLACK.Models.ViewModels;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paginationVM = new PaginationVM()
    {
        PageIndex = Model.PageIndex,
        TotalPages = Model.TotalPages,
        PreviousPage = Model.PreviousPage,
        NextPage = Model.NextPage,
        GetItemsUrl = "/Membership/GetItems",
        GetPaginationUrl = "/Membership/GetPagination"
    };
}

<h1 class="text-center">شاشة العضويات</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <a class="btn btn-primary" href="/Membership/Create">
            اضافة جديد
        </a>
        <div class="input-group mt-5">
            <input class="form-control left-border-none" type="text" id="inpSearch" placeholder="اكتب للبحث" value="">
            <span class="input-group-addon transparent" onclick="ReloadPagination(@Model.PageIndex)">
                <i class='fa fa-search' aria-hidden='true'></i>
            </span>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <td>صورة العضوية</td>
                    <td>الاسم</td>
                    <td>الاسم بالعربية</td>
                    <td>نوع العضوية</td>
                    <td>الاجراءات</td>
                </tr>
            </thead>
            <tbody id="tbBody">
                <partial name="_TableList" model="@Model.ToList()" />
            </tbody>
        </table>
        <div id="dvPagination">
            <partial name="_Pagination" model="@paginationVM" />
        </div>
    </div>
</div>

