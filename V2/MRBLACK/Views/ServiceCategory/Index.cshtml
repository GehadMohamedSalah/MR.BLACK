@model MRBLACK.Helper.PagedList<MRBLACK.Models.Database.ServiceCategory>
@using MRBLACK.Models.ViewModels;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paginationVM = new PaginationVM()
    {
        PageIndex = Model.PageIndex,
        TotalPages = Model.TotalPages,
        PreviousPage = Model.PreviousPage,
        NextPage = Model.NextPage,
        GetItemsUrl = "/ServiceCategory/GetItems",
        GetPaginationUrl = "/ServiceCategory/GetPagination",
        ItemsCount = Model.ItemsCount,
        StartIndex = Model.StartIndex,
        EndIndex = Model.EndIndex
    };
}

<h1 class="text-center">شاشة تصنيفات الخدمات</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-6">
                <a class="btn btn-success" href="/ServiceCategory/Create">
                    <i class="fa fa-plus"></i><span>  اضافة جديد</span>
                </a>
                
            </div>
            <partial name="_TableNavbar" model="@Model.PageIndex" />
        </div>
        
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="bg-blue">
                    <tr>
                        <td>#</td>
                        <td>الصورة</td>
                        <td>الاسم بالعربية</td>
                        <td>الاسم بالانجليزية</td>
                        <td>الصنف الرئيسي</td>
                        <td>نوع التسعير</td>
                        <td>عدد الخدمات</td>
                        <td>عدد التصنيفات الفرعية</td>
                        <td>الاجراءات</td>
                    </tr>
                </thead>
                <tbody id="tbBody">
                    <partial name="_TableList" model="@Model.ToList()" />
                </tbody>
            </table>
            <div id="dvPagination">
                <partial name="_Pagination" model="@paginationVM" />
            </div>
        </div>
        
    </div>
</div>

