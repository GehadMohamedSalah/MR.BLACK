@model MRBLACK.Helper.PagedList<MRBLACK.Models.Database.AcademicYear>
@using MRBLACK.Models.ViewModels;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paginationVM = new PaginationVM()
    {
        PageIndex = Model.PageIndex,
        TotalPages = Model.TotalPages,
        PreviousPage = Model.PreviousPage,
        NextPage = Model.NextPage,
        GetItemsUrl = "/AcademicYear/GetItems",
        GetPaginationUrl = "/AcademicYear/GetPagination",
        ItemsCount = Model.ItemsCount,
        StartIndex = Model.StartIndex,
        EndIndex = Model.EndIndex
    };
}
<h1 class="text-center">شاشة السنين الدراسية</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-6">
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#flipFlop" onclick="FillPopup('/AcademicYear/Create')">
                    <i class="fa fa-plus"></i><span>  اضافة جديد</span>
                </button>
            </div>
            <div class="col-sm-6">
                <div class="input-group mt-5">
                    <a class="input-group-addon transparent" href="/Base/BackToDefault?controllerName=@Context.Request.Path.Value.Split("/")[1]">
                        <i class="fa fa-recycle" aria-hidden='true'></i> الوضع الافتراضي
                    </a>
                    <input class="form-control left-border-none" type="text" id="inpSearch" maxlength="20" placeholder="اكتب للبحث" value="@ViewBag.SearchStr">
                    <span class="input-group-addon transparent" onclick="ReloadPagination(@Model.PageIndex)">
                        <i class='fa fa-search' aria-hidden='true'></i>
                    </span>
                    <span class="input-group-addon transparent" onclick="RemoveTableSearch(@Model.PageIndex)">
                        <i class='fa fa-times' aria-hidden='true'></i>
                    </span>
                   
                </div>
            </div>
            <div class="col-sm-4">
                <table>
                    <tr>
                        <td><span>عرض </span></td>
                        <td>
                            <select class="form-control" onchange="ReloadPagination(@Model.PageIndex)" id="entires">
                                @if(ViewBag.Entires == 5)
                                {
                                <option value="5" selected>5</option>
                                }
                                else
                                {
                                <option value="5">5</option>
                                }

                                @if(ViewBag.Entires == 10)
                                {
                                <option value="10" selected>10</option>
                                }
                                else
                                {
                                <option value="10">10</option>
                                }

                                @if(ViewBag.Entires == 25)
                                {
                                <option value="25" selected>25</option>
                                }
                                else
                                {
                                <option value="25">25</option>
                                }

                                @if(ViewBag.Entires == 50)
                                {
                                <option value="50" selected>50</option>
                                }
                                else
                                {
                                <option value="50">50</option>
                                }

                                @if(ViewBag.Entires == 100)
                                {
                                <option value="100" selected>100</option>
                                }
                                else
                                {
                                <option value="100">100</option>
                                }
                            </select>
                        </td>
                        <td><span> من المدخلات</span></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="bg-blue">
                    <tr>
                        <td>#</td>
                        <td>الاسم بالانجليزية</td>
                        <td>الاسم بالعربية</td>
                        <td>الاجراءات</td>
                    </tr>
                </thead>
                <tbody id="tbBody">
                    <partial name="_TableList" model="@Model.ToList()" />
                </tbody>
            </table>
            <div id="dvPagination">
                <partial name="_Pagination" model="@paginationVM" />
            </div>
        </div>
        
    </div>
</div>

