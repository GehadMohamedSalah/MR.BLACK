@model MRBLACK.Helper.PagedList<MRBLACK.Models.ViewModels.RequestIndexVM>
@using MRBLACK.Models.ViewModels;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    var paginationVM = new PaginationVM()
    {
        PageIndex = Model.PageIndex,
        TotalPages = Model.TotalPages,
        PreviousPage = Model.PreviousPage,
        NextPage = Model.NextPage,
        GetItemsUrl = "/Request/GetItems",
        GetPaginationUrl = "/Request/GetPagination",
        ItemsCount = Model.ItemsCount,
        StartIndex = Model.StartIndex,
        EndIndex = Model.EndIndex
    };
}

<h1 class="text-center">شاشة الطلبات</h1>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-sm-6">
                @if (ViewBag.IsStudent == true)
                {
                    <a class="btn btn-success" href="/Request/Create">
                        <i class="fa fa-plus"></i><span>  اضافة جديد</span>
                    </a>
                }
               
            </div>
            <partial name="_TableNavbar" model="@Model.PageIndex" />
        </div>
        
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="bg-blue">
                    <tr>
                        <td>#</td>
                        <td>رقم الطلب</td>
                        <td>اسم الطالب</td>
                        <td>تاريخ الطلب</td>
                        <td>الحالة</td>
                        <td>اجمالي السعر</td>
                        <td>اجرءات</td>
                    </tr>
                </thead>
                <tbody id="tbBody">
                    <partial name="_TableList" model="@Model.ToList()" />
                </tbody>
            </table>
            <div id="dvPagination">
                <partial name="_Pagination" model="@paginationVM" />
            </div>
        </div>
        
    </div>
</div>

