@model List<MRBLACK.Models.Database.BookStore>
@{
    Layout = "~/Views/_WebsiteLayout.cshtml";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs aos-init aos-animate" data-aos="fade-in">
        <div class="container">
            <h2>The books</h2>
            <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Events Section ======= -->
    <section id="events" class="events">
        <div class="container aos-init aos-animate" data-aos="fade-up">
            <div class="select-section">
                <div class="select">
                    <select name="format" id="format" onchange="FilterByCategory(this)">
                        <option selected="" disabled="">Choose Category</option>
                        <option value="0">All</option>
                        @foreach (SelectListItem item in ViewBag.BookCategoryList)
                        {
                            if (ViewBag.SelectedCategory != null && ViewBag.SelectedCategory.ToString() == item.Value)
                            {
                                <option value="@item.Value" selected>@item.Text</option>
                            }
                            else
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 d-flex align-items-stretch">
                        <div class="card" style="width:100%;">
                            <div class="card-img">
                                <img style="width:100%;height:300px" src="~/Uploads/Books/@item.EnName/@item.BookCoverImgPath" alt="@item.EnName">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><a href="#">@item.EnName</a></h5>
                                <p class="font-italic text-center">Price: <span>@item.Price EG</span></p>
                                <p class="font-italic text-center">Authore: <span>@item.EnAuthoreName</span></p>
                                <p class="card-text">@item.EnDesc</p>
                                <a href="#" class="buy">buy now</a>
                            </div>
                        </div>
                    </div>

                }


            </div>

        </div>
    </section><!-- End Events Section -->

</main>

<script>
    function FilterByCategory(element) {
        var cateId = $(element).val();
        window.location.href = "/Home/Books/" + cateId;
    }
</script>