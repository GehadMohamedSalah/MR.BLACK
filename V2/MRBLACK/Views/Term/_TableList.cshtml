@model List<MRBLACK.Models.Database.Term>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EnName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArName)
        </td>
        <td>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#flipFlop" onclick="FillPopup('/Term/Edit/@item.Id')">
                <i class="fa fa-edit"></i>
            </button>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#flipFlop" onclick="FillPopup('/Term/Delete/@item.Id')">
                <i class="fa fa-trash"></i>
            </button>
        </td>
    </tr>
}
