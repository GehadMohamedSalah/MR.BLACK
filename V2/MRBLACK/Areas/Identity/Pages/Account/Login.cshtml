@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-page">
    <section>
        <div id="container_demo" style="margin-top:100px;">
            <div id="wrapper">
                <div id="login" class="animate form">
                    <form id="account" method="post">
                        <h1>تسجيل دخول</h1>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <input asp-for="Input.Email" class="form-control" placeholder="البريد الالكتروني" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12">
                                <input asp-for="Input.Password" class="form-control" placeholder="كلمة المرور" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <p class="login button">
                                <input type="submit" value="سجل" />
                            </p>
                        </div>

                        <p class="change_link">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="to_register">التحق بنا</a>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="to_register">هل نسيت كلمة المرور؟</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
