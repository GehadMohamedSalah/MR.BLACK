@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="login-page">
    <section>
        <div id="container_demo" style="margin-top:100px;">
            <div id="wrapper">
                <div id="login" class="animate form">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-group row">
                            <input asp-for="Input.Email" class="form-control" placeholder="البريد الالكتروني" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <input asp-for="Input.Password" class="form-control" placeholder="كلمة المرور الجديدة" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="تأكيد كلمة المرور" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <p class="login button">
                                <input type="submit" value="تغيير" />
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
