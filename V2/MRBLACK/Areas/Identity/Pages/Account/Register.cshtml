@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs aos-init aos-animate" data-aos="fade-in">
        <div class="container">
            <h2>Registration</h2>
            @*<p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>*@
        </div>
    </div><!-- End Breadcrumbs -->

    <section class="login section-bg">
        <div class="form-modal">

            <div class="form-toggle">
                <button type="button" id="login-toggle" onclick="RedirectToLogin()" style="background-color: rgb(255, 255, 255); color: rgba(118, 181, 230, 0.78);">log in</button>
                <button type="button" id="signup-toggle"  style="background-color: rgb(118, 181, 230); color: rgb(255, 255, 255);">sign up</button>
            </div>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.EnName" type="text" placeholder="Enter your english name">
                <span asp-validation-for="Input.EnName" class="text-danger"></span>

                <input asp-for="Input.ArName" type="text" placeholder="Enter your arabic name">
                <span asp-validation-for="Input.ArName" class="text-danger"></span>

                <input asp-for="Input.Phone" type="text" placeholder="mobile number">
                <span asp-validation-for="Input.Phone" class="text-danger"></span>

                <input asp-for="Input.Email" type="email" placeholder="Enter your email">
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <input asp-for="Input.Username" placeholder="Enter your username">
                <span asp-validation-for="Input.Username" class="text-danger"></span>

                <div class="select">
                    <select asp-for="Input.CountryId" asp-items="Model.CountryList">
                        <option disabled value="-1" selected>Select Country</option>
                    </select>
                    <span asp-validation-for="Input.CountryId" class="text-danger"></span>

                </div>
                <div class="select">
                    <select asp-for="Input.MembershipId" asp-items="Model.MembershipList">
                        <option disabled value="-1" selected>Select Membership Type</option>
                    </select>
                    <span asp-validation-for="Input.MembershipId" class="text-danger"></span>

                </div>
                <input asp-for="Input.Password" type="password" placeholder="Create password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm password">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button type="submit" class="btn signup">create account</button>
                <p>Clicking <strong>create account</strong> means that you are agree to our <a href="javascript:void(0)">terms of services</a>.</p>


            </form>

        </div>

    </section>

</main>
<script>
    function RedirectToLogin() {
        window.location.href = "/Identity/Account/Login";
    }
</script>
