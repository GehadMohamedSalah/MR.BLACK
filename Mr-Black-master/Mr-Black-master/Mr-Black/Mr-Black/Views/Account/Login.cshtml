@model Mr_Black.Database.LoginViewModel


@{ Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    ViewBag.Title = "تسجيل دخول";
    }

<div class="login-page">
    <section>
        <div id="container_demo" style="margin-top:100px;">
            <div id="wrapper">
                <div id="login" class="animate form">
                    <form asp-action="Login" asp-controller="Account">
                        <h1>تسجيل الدخول</h1>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <input asp-for="Email" type="email" class="form-control" placeholder="البريد الالكترونى">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input asp-for="Password" type="password" class="form-control" placeholder="كلمة المرور">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <p class="login button">
                            <input type="submit" value="تسجيل الدخول" />
                        </p>
                        <p class="change_link">
                            <a href="/Account/Register" class="to_register">التحق بنا</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
